<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="view_list_enfant" model="ir.ui.view">
        <field name="name">sase.enfant.list</field>
        <field name="model">sase.enfant</field>
        <field name="arch" type="xml">
            <list>
                <field name="nom" />
                <field name="prenom" />
                <field name="date_naissance" />
                <field name="age" />
                <field name="genre" />
                <field name="situation_ids" widget="many2many_tags" options="{'no_create': True}" />
            </list>
        </field>
    </record>

    <record id="view_form_enfant" model="ir.ui.view">
        <field name="name">sase.enfant.form</field>
        <field name="model">sase.enfant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nom" />
                            <field name="prenom" />
                            <field name="date_naissance" />
                            <field name="age" />
                            <field name="genre" />

                        </group>
                        <group>
                            <field name="notes" />
                        </group>

                    </group>
                    <notebook>
                        <page string="Dossiers">
                            <field name="situation_ids" options="{'create': False, 'delete': False}" string="" readonly="1">
                                <list>
                                    <field name="date_officialisation" />
                                    <field name="date_fin" />
                                    <field name="nom" />
                                    <field name="state" />
                                </list>
                            </field>
                        </page>
                        <page string="Rapports">
                            <field name="rapport_ids" options="{'create': False, 'delete': False}" string="">
                                <list editable="bottom">
                                    <field name="situation_id" />
                                    <field name="nom" />
                                    <field name="date_prevue" width="200px" />
                                    <field name="lien_rapport" widget="url" />
                                    <field name="date_reelle" width="200px" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
