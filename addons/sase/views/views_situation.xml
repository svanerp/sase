<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_list_situation" model="ir.ui.view">
        <field name="name">sase.situation.list</field>
        <field name="model">sase.situation</field>
        <field name="arch" type="xml">
            <list decoration-danger="state in ('cancelled')" decoration-success="state in ('done')" decoration-warning="state in ('draft')">
                <field name="state" width="100px" />
                <field name="nom" />

                <field name="service_id" />
                <field name="date_officialisation" width="200px" />
                <field name="nb_jours" width="220px" />

                <field name="equivalent_situation" sum="Total" width="130px" />
                <field name="intervenant_principal_id" />
                <field name="intervenant_secondaire_id" />

                <field name="date_fin" />
                <field name="latence" optional="hide" />
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_form_situation" model="ir.ui.view">
        <field name="name">sase.situation.form</field>
        <field name="model">sase.situation</field>
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button name="cancel" type="object" string="Annuler le dossier" class="btn-primary" confirm="Êtes-vous sûr de vouloir annuler ce dossier ?" />
                </header> -->
                <sheet>
                    <widget name="web_ribbon" title="Terminé" bg_color="bg-success" invisible="state != 'done'" />
                    <widget name="web_ribbon" title="Annulé" bg_color="bg-danger" invisible="state != 'cancelled'" />
                    <widget name="web_ribbon" title="Admission" bg_color="bg-warning" invisible="state != 'draft'" />
                    <group>
                        <group>
                            <field name="nom" />
                            <field name="enfant_ids" widget="many2many_tags" options="{'create': False}" />
                            <field name="equivalent_situation" />
                            <field name="date_officialisation" />
                            <field name="date_fin" />
                            <field name="nb_jours" />
                            <field name="latence" />

                        </group>
                        <group>
                            <field name="intervenant_principal_id" />
                            <field name="intervenant_secondaire_id" />

                        </group>
                    </group>
                    <notebook>
                        <page string="Dates">
                            <group>
                                <group>
                                    <field name="date_notification" />
                                    <field name="date_reservation" />
                                    <field name="date_ep1" />
                                    <field name="date_ep2" />
                                    <field name="date_ep3" />
                                    <field name="date_officialisation" />
                                </group>
                                <group>
                                    <field name="date_sortie" />
                                    <field name="date_annulation" />
                                </group>
                            </group>
                        </page>
                        <page string="Mandant">
                            <group>
                                <field name="service_id" />
                                <field name="service_mandant" domain="[('qualite', '=', 'directrice'),('service_id','=', service_id)]" />
                                <field name="service_delegue" domain="[('qualite', '!=', 'directrice'),('service_id','=', service_id)]" />
                            </group>
                        </page>
                        <page string="Rapports">
                            <field name="report_ids" widget="one2many_list" options="{'create': False}">
                                <list decoration-danger="date_prevue &lt; current_date and not date_reelle" decoration-success="date_reelle" editable="bottom">
                                    <field name="enfant_id" width="300px" />
                                    <field name="nom" width="300px" />
                                    <field name="date_prevue" width="200px" />
                                    <field name="date_reelle" width="200px" />
                                    <field name="lien_rapport" width="300px" widget="url" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_search_situation" model="ir.ui.view">
        <field name="name">sase.situation.search</field>
        <field name="model">sase.situation</field>
        <field name="arch" type="xml">
            <search>
                <field name="nom" string="Nom" />
                <field name="enfant_ids" string="Enfant" />
                <group expand="1" string="Group By">
                    <filter name="intervenant_ids" string="Intervenant" context="{'group_by': 'intervenant_ids'}" />
                    <filter name="service_id" string="Service mandant" context="{'group_by': 'service_id'}" />
                    <filter name="service_mandant" string="Mandant" context="{'group_by': 'service_mandant'}" />
                    <filter name="service_delegue" string="Délégué" context="{'group_by': 'service_delegue'}" />
                    <separator />
                    <filter name="state" string="Etat" context="{'group_by': 'state'}" />
                    <filter name="active_and_inactive" string="Tous" domain="[('active', 'in', [True, False])]" />
                </group>
            </search>
        </field>
    </record>
</odoo>
